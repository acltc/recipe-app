<h1>Edit Recipe</h1>

<%= form_for @recipe do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :contributor %>
    <%= f.text_field :contributor %>

    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>

    <%= f.label :directions %>
    <%= f.text_area :directions %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>