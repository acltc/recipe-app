<h1>Recipes</h1>
<h6><a href="/recipes/new">Add Recipe</a></h6>
<h5>Categories</h5>
<ul>
  <% @categories.each do |category| %>
    <li><a href="/?category=<%= category.name %>"><%= category.name %></li>
  <% end %>
</ul>
<div class="row">
  <% @recipes.each do |recipe| %>
      <div class="col-md-3">
        <div class="thumb">
          <a href="/recipes/<%= recipe.id %>">
            <p><%= recipe.name %></p>
            <img src="<%= recipe.photo %>" height="200" width="200"/>
            <p>Contributed By: </p>
          </a>
        </div>
        <p>
          <a href="/recipes/<%= recipe.id %>/edit">Edit</a>
          <a data-confirm="Are you sure?" data-method="delete" href="/recipes/<%= recipe.id %>" rel="nofollow">Delete</a>
        </p>
      </div>
  <% end %>
</div>